
<link rel="stylesheet" href="/public/css/styles.css">
<div class = "container">
    <div class = "img-container">
        <img src="https://pngimg.com/uploads/burger_sandwich/burger_sandwich_PNG4114.png" alt="burger_image">

    </div>
    <h1> Eat-Da-Burger</h1>
    <div class = "lists-container">
        <!--Not devoured -->
        <h3>Not Devoured</h3>
        <div>
            {{#each burgers}}
            {{#with dataValues}}
            {{#unless isDevoured}}
            <div>
                {{ dataValues.name}} <button class="devour" data-id = "{{id}}">Devour it</button>
            </div>
            {{/unless}}
            {{/each}}
        </div>
<!-- devoured -->
<h3>Devoured</h3>
        <div>
            {{#each burgers}}
            {{#if dataValues.isDevoured}}
            
            <div>
            {{ dataValues.name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <input type="text" id="newBurger">
</div>

<script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>

<script src="/public/js/script.js"></script>
